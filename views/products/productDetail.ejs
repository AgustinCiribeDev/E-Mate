<!DOCTYPE html>
<html>
<%- include ('./../partials/head.ejs') %>
<body>
    <%- include ('./../partials/header.ejs') %>


    <div class="container mt-5">
        <!--<div class="row gx-5 justify-content-center">
          <div class="col-lg-8 col-xl-6">
              <div class="text-center">
                  <h2 class="fw-bolder"><%=producto.nombre%></h2>
              </div>
          </div>
        </div>
        <br>-->



        <section class="product-photo">
            <div class="product-photo-left">
                <img src="<%=producto.imagen%>" class="product-photo-img" alt="mate" name="imagen" id="imagen">
            </div>



            <div class="product-buy-options">
                <div>
                    <h2 class="title-detail"><%=producto.nombre%></h2>
                </div>
                <h3>$ <%=producto.precio%></h3>
                <h4><%=producto.cuota%> cuotas sin interés</h4>
                <h5>Ver formas de pago</h4>
                <form action="/carrito" method="post" class="form-options">
                    <div class="form-options-color-amount">
                        <!--<div class="form-options-color">
                            <label for="color">Color</label>
                            <select name="color" id="color">
                                <option value="negro">Negro</option>
                                <option value="marron">Marrón</option>
                            </select>
                        </div>-->
                        <div class="form-options-amount" style="padding-left: 0px;">
                            <label for="cantidad">Cantidad</label>
                            <input type="number" id="cantidad" name="cantidad" value="1" min="1" max="10"> 
                        </div>
                    </div>
                    <div class="form-zip-code">
                        <form action="#" method="get">
                            <label for="zip-code">Calculá el costo de envío</label>
                            <div class="form-zip-code-search-submit">
                                <input type="search" placeholder="Ingresá tu código postal" aria-label="Buscar">
                                <button type="submit">Calcular</button>
                            </div>
                        </form>
                    </div>
                    <section class="product-descriptions">
                        <h2>DESCRIPCIÓN DEL PRODUCTO</h2>
                        <p>
                            <%=producto.descripcion%>
                        </p>
                    </section>
                    <br>
                    <% if(locals.isLogged == false) {%>
                    <div>
                        <button type="submit" class="btn btn-success" onclick="addToCart(document.getElementById('cantidad').value, '<%=producto.id%>', '<%=producto.nombre%>', '', '<%=producto.precio%>'); window.location.href='/products/cart';">Comprar Ahora</button>
                        <button  type="button" class="btn btn-outline-success" onclick="addToCart(document.getElementById('cantidad').value, '<%=producto.id%>', '<%=producto.nombre%>', '', '<%=producto.precio%>'); showAddedToCartMessage();">Agregar al Carrito</button>
                        <div id="addedToCartMessage" style="display: none; text-align: center;margin-bottom: 10px;">
                            <span style="padding: 5px;" class="text-success">Agregado al carrito</s>
                        </div>
                    </div>
                    <% } else {%>
                    <div>
                        <a href="/products/edit/<%=producto.id%>"><button type="submit" class="btn btn-success">Editar</button></a>
                        <form action="/products/delete/<%=producto.id%>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-outline-success">Borrar Producto</button>
                        </form>
                    </div>
                    <% } %>
                </form>
            </div>
        </section>
        
    </div>
    
    <%- include ('./../partials/footer.ejs') %>
    <%- include ('./../partials/bootstrapJs.ejs') %>
    <script src="/js/cart.js"></script>
</body>
</html>