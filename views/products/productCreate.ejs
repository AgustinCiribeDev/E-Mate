        <!-- Formulario de carga de productos -->
        <div class="col-md-6">
          <form action="/products/create" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="nombre">Nombre del producto</label>
              <input type="text" class="form-group" name="nombre" id="nombre" placeholder="Ingresar nombre">
            </div>
            <br />
            <div class="form-group">
              <label for="categoria">Categoría</label>
              <select class="custom-select" name="categoria" id="categoria">
                <option selected>Seleccione una categoría</option>
                <option>Yerbas</option>
                <option>Mates</option>
                <option>Sets</option>
                <option>Termos</option>
                <option>Bombillas</option>
              </select>
            </div>
            <br/>
            <div class="form-group">
              <label for="estado">Estado</label>
              <select class="custom-select" name="estado" id="estado">
                <option selected>En Oferta</option>
                <option>Ultimos Agregados</option>
              </select>
            <br/>
            <br>
            <div class="custom-file">
              <label for="imagen">Foto </label>
              <input type="file" class="custom-file-input" id="imagen" name="imagen">
              <label class="custom-file-label" for="imagen">Seleccionar archivo de imagen</label>
            </div>
            <br />
            <div class="form-group">
              <label for="descripcion">Descripción</label>
              <textarea class="form-control" id="descripcion"name="descripcion" rows="3"></textarea>
            </div>
            <br />
            <div class="form-options-color-amount">
              <div class="form-options-amount">
                <label for="precioActual">Precio de venta</label>
                <input type="number" id="precioActual" name="precioActual">
              </div>
              <div class="form-options-amount">
                <label for="descuento">Descuento</label>
                <input type="number" id="descuento" name="descuento">
              </div>
              <div class="form-options-amount">
                <label for="cuotas">Cuotas</label>
                <input type="number" id="cuotas" name="cuotas">
              </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary my-1">Guardar Producto</button>
            <br />
          </form>
