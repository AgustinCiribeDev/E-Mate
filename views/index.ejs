<div class="row row-cols-1 row-cols-md-3 g-4">
  <% for (let i = 0; i < producto.length; i++ ) { %>
    <div class="col-lg-4 mb-5">
      <div class="card h-100 shadow border-0">
        
        <a href="products/productDetail/<%=producto[i].id %>">
          <img class="card-img-top" style="max-height: 250px; width: auto; display: block; margin: 0 auto; object-fit: contain; " src="<%= producto[i].imagen %>" alt="..." />
        </a>
        
        <div class="card-body p-4">
          <div class="badge bg-primary bg-gradient rounded-pill mb-2">
            <%= producto[i].estado %>
          </div>
            <h5 class="card-title mb-3"><%= producto[i].nombre %></h5>

            <!--<p class="text-body-tertiary small">
            <em> <%=producto[i].descripcion%>  </em>
            </p>-->
          <p class="card-text">
            $<%= producto[i].precio %> 
            <% if (producto[i].descuento === null || producto[i].descuento === 0 ) { %>
              <%= "" %>
            <% } else { %> 
              (<%= producto[i].descuento %> % de descuento)
            <% } %><br />
            <%= producto[i].cuota %>
          </p>

        <div class="boton">
          <button  type="button" class="btn btn-outline-success" onclick="addToCart(1, '<%=producto[i].id%>', '<%=producto[i].nombre%>', '', '<%=producto[i].precio%>'); alert('¡Producto agregado correctamente!')">
            Agregar al carrito <i class="fa-solid fa-cart-plus"></i>
          </button>
        </div>
        </div>
        
        <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
          <div class="d-flex align-items-end justify-content-between">
