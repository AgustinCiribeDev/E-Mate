<!-- titulo de las listado de productos de oferta-->    
<div class="container">
  <div class="row">
    <div class="col align-items-center d-flex ">
      <h4 class="p-2 mr-1 mt-3"><i class="bi bi-arrow-right-circle-fill"></i> Ofertas del Mes</h4>
    </div>
  </div>
</div>

<!-- comienza el contenedor de productos -->
<div class="container">
  <div class="row text-secondary mt-4 mb-4 justify-content-center align-items-center">
    <% for (let i = 0; i < producto.length; i++ ) { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card" style="width: 18rem;">
          <a href="products/productDetail/<%=producto[i].id %>">
            <div class="d-flex justify-content-center align-items-center">
              <img class="card-img-top img-fluid" src="<%= producto[i].imagen %>" alt="Card image cap" style="width: 15vw; height: 15vw;">
            </div>
          </a>
          <div class="card-body">
            <h5 class="card-title"><%= producto[i].nombre %></h5>
          </div>

          <!-- Agregar el nombre del local -->
          <div class="card-body">
            <p class="card-text">Local: TBD </p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="block-products-feed__product-price text--primary">
                $<%= producto[i].precio %> 
                <% if (producto[i].descuento === null) { %>
                  <%= "" %>
                <% } else { %> 
                  (<%= producto[i].descuento %>% de descuento)
                <% } %>
              </div>
            </li>
            <li class="list-group-item"><%= producto[i].cuota %></li>
            <li class="list-group-item"><%= producto[i].estado %></li>
          </ul>
          <div class="card-body">
            <button  type="button" class="btn-cart" onclick="addToCart(1, '<%=producto[i].id%>', '<%=producto[i].nombre%>', '', '<%=producto[i].precio%>'); alert('¡Producto agregado correctamente!')">Agregar al Carrito</button>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>

