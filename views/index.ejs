<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head.ejs') %>
<body>  
  
  <%- include ('./partials/header.ejs') %>
  <main>

<!-- carrusel (aun no funciona, faltan rutas en app.js)-->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://santiagom.alwaysdata.net/carrusel1.jpg">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://santiagom.alwaysdata.net/carrusel2.jpg">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://santiagom.alwaysdata.net/carrusel3.jpg">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Anterior</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Siguiente</span>
  </a>
</div>

<!-- titulo de las categorias-->    
<div class="container">
  <div class="row">
    <div class="col align-items-center d-flex">
      <h4 class="p-2 mr-1"><i class="bi bi-arrow-right-circle-fill"></i> Categorías</h4>
    </div>
  </div>
</div>

<!-- contenedor de categorias-->
<div class="container">
  <div class="row">
    <div class="justify-content-start d-flex flex-wrap">
      <div class="category col-lg-2 col-md-3 col-sm-4">
        <div class="d-flex justify-content-center align-items-center rounded-circle bg-secondary text-white" style="width: 60px; height: 60px;">
          <span><i class="fa-solid"></i><button type="button" class="btn"><i class="bi bi-box2-heart"></i></button></span>
        </div>
      </div>
      <div class="category col-lg-2 col-md-3 col-sm-4">
        <div class="d-flex justify-content-center align-items-center rounded-circle bg-secondary text-white" style="width: 60px; height: 60px;">
          <span><i class="fa-solid"></i><button type="button" class="btn"><i class="bi bi-cup-straw"></i></button></span>
        </div>
      </div>
      <div class="category col-lg-2 col-md-3 col-sm-4">
        <div class="d-flex justify-content-center align-items-center rounded-circle bg-secondary text-white" style="width: 60px; height: 60px;">
          <span><i class="fa-solid"></i><button type="button" class="btn"><i class="bi bi-basket2-fill"></i></button></span>
        </div>
      </div>
      <div class="category col-lg-2 col-md-3 col-sm-4">
        <div class="d-flex justify-content-center align-items-center rounded-circle bg-secondary text-white" style="width: 60px; height: 60px;">
          <span><button type="button" class="btn"><i class="bi bi-flower1"></i></button></span>
        </div>
      </div>
    </div>  
  </div>
</div>
  
<!-- titulo de las listado de productos de oferta-->    
<div class="container">
  <div class="row">
    <div class="col align-items-center d-flex ">
      <h4 class="p-2 mr-1 mt-3"><i class="bi bi-arrow-right-circle-fill"></i> Ofertas del Mes</h4>
    </div>
  </div>
</div>

<!-- comienza el contenedor de productos -->
<div class="container">
  <div class="row text-secondary mt-4 mb-4">
    <% productosOferta.slice(0, 4).forEach((producto) => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card" style="width: 18rem;">
          <a href="/products/productDetail/<%=producto.id%>">
            <img class="card-img-top img-fluid" src="<%= producto.imagen %>" alt="Card image cap">
          </a>
          <div class="card-body">
            <h5 class="card-title"><%= producto.nombre %></h5>
          </div>
          <!-- Agregar el nombre del local -->
          <div class="card-body">
            <p class="card-text">Local: Nombre </p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= producto.cuotas %> cuotas</li>
            <li class="list-group-item">
              <div class="block-products-feed__product-price text--primary">
                $<%= producto.precioActual %> (<%= producto.descuento %>% de descuento)
              </div>
            </li>
            <li class="list-group-item"><%= producto.estado %></li>
          </ul>
          <div class="card-body">
            <a href="/products/cart" class="btn btn-primary"><i class="bi bi-cart4"> Agregar al carrito</i></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Enlace para ver más productos -->
<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-auto">
      <a href="/products/more" class="btn btn-primary">Ver más productos...</a>
    </div>
  </div>
</div>

</main>

<!-- aqui comienza el footer-->
<%- include ('./partials/footer.ejs') %>
<%- include ('./partials/bootstrapJs.ejs') %>
</body>
</html>
