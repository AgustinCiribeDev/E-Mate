<!DOCTYPE html>
<html lang="en">
<%- include ('./../partials/head.ejs') %>
<body>
    
  <%- include ('./../partials/headerLog.ejs') %>

    <div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 15vh; font-size:22px">
        <div class="row w-100 justify-content-end" >
            <p class="text-success col-6 m-0 row justify-content-end px-5">Iniciar Sesión</p>
            <a class="text-body-tertiary col-6 m-0" href="/users/register" style="text-decoration: none;">Registrarse</a>
            <p class="text-bg-success p-1 col-6 m-30 h-10"></p>
            <p class="bg-secondary-subtle p-1 col-6 m-30 h-10" ></p>
        </div>

    </div>


    <div .container>
    <form method="POST" action="/users/login">
        <div class="d-flex align-items-center justify-content-center" style="min-height: 55vh;">
            <div class="row"></div>
                <article class="text-center col-8 col-sm-6  col-md-5 col-lg-4 col-xl-3" style="font-size: 18px;">
                    <div class="form-floating mb-2 col-12 mx-auto text-center">
                        <input type="text" class="form-control" id="email" name="email" placeholder="name@example.com">
                        <label for="email">Usuario</label>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-floating mb-2 col-12 mx-auto text-center">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                        <label for="password">Contraseña</label>
                    </div>

                    <div class="d-grid mb-5 gap-2 col-12 mx-auto btn btn-success">
                        <button id="iniciarsesion"class="btn btn-success" type="submit">INICIAR SESION</button>
                    </div>
                    

                    <div class="d-grid mb-2 align-items-center gap-2 col-12 mx-auto">
                        <button id="iniciarsesion"class="btn btn-outline-primary" type="button"><i class="fa-brands fa-google"></i>     Ingresar con Google</button>
                    </div>

                    <div class="d-grid mb-2 align-items-center col-12 mx-auto">
                        <button id="iniciarsesion"class="btn btn-outline-primary" type="button"><i class="fa-brands fa-apple" style="font-size: 22px;"></i>   Ingresar con Apple</button>
                    </div>
                    
                </article>
        </div>
    </form>
    </div>

    <%- include ('./../partials/footer.ejs') %>
    <%- include ('./../partials/bootstrapJs.ejs') %>
</body>
</html>