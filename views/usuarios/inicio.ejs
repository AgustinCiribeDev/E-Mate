<!DOCTYPE html>
<html lang="en">
<%- include ('./../partials/head.ejs') %>
<body>
<%- include ('./../partials/headerLog.ejs') %>

<div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 15vh; font-size:22px">
    <div class="row w-100 justify-content-center" >
        <p class="text-success m-0 row justify-content-center px-5">Iniciar Sesión</p>
            <p class="text-bg-success p-1  m-30 h-10"></p>
    </div>
</div>

<div .container>
    <form class ='formulario' method="POST" action="/users/login">
        <div class="d-flex align-items-center justify-content-center" style="min-height: 43vh;">
            <div class="row"></div>
                <article class="text-center col-8 col-sm-6  col-md-5 col-lg-4 col-xl-3" style="font-size: 18px;">
                    <div class="errores">
                        <ul></ul>
                    </div>
                    <div class="form-floating mb-2 col-12 mx-auto text-center">
                        <input type="text" name="email" id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" placeholder="name@example.com" value="<%= locals.oldData ? oldData.email : null%>">
                            <label for="email"> Email</label>
                                <% if (locals.errors && errors.email) { %>
                                    <div class="text-danger">
                                        <%= errors.email.msg %>
                                    </div>
                                <% } %>
                    </div>

                    <div class="form-floating mb-2 col-12 mx-auto text-center">
                        <input type="password" class="form-control" id="password" name ="password" placeholder="Password" value="<%= locals.oldData ? oldData.password : null%>">
                            <label for="password">Contraseña</label>
                                <% if (locals.errors && errors.password) { %>
                                    <div class="text-danger">
                                        <%= errors.password.msg %>
                                    </div>
                                <% } %>
                    </div>
                    
                    <div class="form-check m-3" style="font-size: 16px;">
                        <input class="form-check-input" type="checkbox" value="" name= "remember_user" id="remember_user">
                            <label class="form-check-label" for="flexCheckD efault"> Recordar mi usuario </label>
                    </div>
                    
                    
                    <div class="d-grid mb-5 gap-50 col-12 mx-auto btn btn-success">
                        <button id="iniciarsesion"class="btn btn-success" type="submit">INICIAR SESIÓN</button>
                    </div>
                    
                </article >
        </div>
    </form>
    </div>
    <script src="/js/validationLoginFront.js"></script>
    <%- include ('./../partials/footer.ejs') %>
    <%- include ('./../partials/bootstrapJs.ejs') %>
</body>
</html>