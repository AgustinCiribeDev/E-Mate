<!DOCTYPE html>
<html lang="en">
    
<%- include ('./../partials/head.ejs') %>
<body>
    <%- include ('./../partials/headerLog.ejs') %>  

    <div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 10vh; font-size:22px">
        <div class="row w-100 justify-content-end" >
            <a href="/users/register">
                <p class="text-secondary m-0 px-5"> Crear Usuario</p>
            </a>
            
            <p class="text-bg-secondary p-1 col-12 m-30 h-10" ></p>
        </div>
    </div>

    <div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 10vh; font-size:22px">
        <div class="row w-100 justify-content-end" >
            <p class="text-success m-0 px-5"> Editar Usuario</p>
            <p class="text-bg-success p-1 col-12 m-30 h-10" ></p>
        </div>
    </div>


    <div .container>
        <form method="POST" action="/users/editUser/<%=usuarioEditar.id%>?_method=PUT" enctype="multipart/form-data"> 
        <div class="col-12 d-flex align-items-center justify-content-center" style="min-height: 25vh;">
            <div class="row"></div>
                
                <article class="text-center col-12 " style="font-size: 18px;">
                    <div class="errores">
                        <ul></ul>
                    </div>
                    <div class="form-floating mb-2 col-3 text-center d-inline-block">
                        <input type="text" name="name" id="name" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>" placeholder="Nombre" value="<%= usuarioEditar.nombre %>" >
                        <label for="name">Nombre y apellido</label>
                        <% if (locals.errors && errors.name) { %>
                        <div class="text-danger">
                            <%= errors.name.msg %>
                        </div>
                        <% } %>
                    </div>

                    <div class="form-floating mb-2 col-4 text-center d-inline-block">
                        <label for="rol"></label>
                        <select id="rol" name="rol" class="form-select <%= locals.errors && errors.rol ? 'is-invalid' : null %>">
                          <option value="" disabled>Selecciona un rol</option>
                          <option value="Administrador" <% if (usuarioEditar.rol === 'Administrador') { %>selected<% } %>>Administrador</option>
                          <option value="Empleado" <% if (usuarioEditar.rol === 'Empleado') { %>selected<% } %>>Empleado</option>
                        </select>
                        <% if (locals.errors && errors.rol) { %>
                          <div class="text-danger">
                            <%= errors.rol.msg %>
                          </div>
                        <% } %>
                      </div>

                      <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <label for="local_id"></label>
                        <select id="local_id" name="local_id" class="form-select <%= locals.errors && errors.local_id ? 'is-invalid' : null %>">
                          <option value="" disabled>Selecciona un Local ID</option>
                          <option value="1" <% if (usuarioEditar.local_id === 1) { %>selected<% } %>>1</option>
                          <option value="2" <% if (usuarioEditar.local_id === 2) { %>selected<% } %>>2</option>
                          <option value="3" <% if (usuarioEditar.local_id === 3) { %>selected<% } %>>3</option>
                        </select>
                        <% if (locals.errors && errors.local_id) { %>
                          <div class="text-danger">
                            <%= errors.local_id.msg %>
                          </div>
                        <% } %>
                      </div>

                    <!--// IMAGEN DE PERFIL -->
                    <div class="form-floating mb-2 col-1 mx-auto text-center d-inline-block">
                        <img src="<%= usuarioEditar.imagen %>" alt="Foto de Perfil" class="img-fluid rounded-circle">
                    </div>

                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <input type="text" name="email" id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" placeholder="name@example.com" value="<%= usuarioEditar.email %>">
                        <label for="email">Email</label>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña">
                        <label for="password">Contraseña</label>
                            <% if (locals.errors && errors.password) { %>
                                <div class="text-danger">
                                    <%= errors.password.msg %>
                                </div>
                            <% } %>
                    </div>
                
                    
                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <div class="form-group">
                        <label class="custom-file-label" for="avatar" >Cambiar Img</label>
                        <input type="file" class="custom-file-input" id="avatar" name="avatar" value="<%= usuarioEditar.imagen %>">  
                            <% if (locals.errors && errors.avatar) { %>
                                <div class="text-danger">
                                    <%= errors.avatar.msg %>
                                </div>
                            <% } %>  
                        </div>
                    </div>   
                    
                    <div class="d-grid mb-5 gap-2 col-3 mx-auto text-center btn btn-success d-inline-block">
                        <button id="guardarUsuario"class="btn btn-success" type="submit">GUARDAR USUARIO</button>
                    </div>               
                    
                    <div class="d-grid mb-5 gap-2 col-3 d-inline-block btn btn-danger d-inline-block">
                        <button id="eliminarUsuario" class="btn btn-danger" type="button">ELIMINAR USUARIO</button>
                    </div>
                    
                    <script>
                        const eliminarUsuarioBtn = document.getElementById('eliminarUsuario');
                    
                        eliminarUsuarioBtn.addEventListener('click', () => {
                            // Envía una solicitud para eliminar el usuario al hacer clic en el botón
                            fetch("/users/delete/${userId}", {
                                method: 'DELETE',
                            })
                            .then(response => response.json())
                            .then(data => {
                                console.log(data);
                                // Redirige a la página de registro de usuarios o realiza alguna acción adicional
                                window.location.href = '/users/registro';
                            })
                            .catch(error => console.error('Error al eliminar usuario:', error));
                        });
                    </script>
                    
                </article>
        </div>
        
    </form>
    </div>

   
    <script src="/js/validationEditUserFront.js"></script>
    <%- include ('./listado.ejs') %>
</body>
</html>


