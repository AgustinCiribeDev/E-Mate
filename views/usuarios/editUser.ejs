<!DOCTYPE html>
<html lang="en">
    
<%- include ('./../partials/head.ejs') %>
<body>
    <%- include ('./../partials/headerLog.ejs') %>  

    <div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 10vh; font-size:22px">
        <div class="row w-100 justify-content-end" >
            <a href="/users/register">
                <p class="text-secondary m-0 px-5"> Crear Usuario</p>
            </a>
            
            <p class="text-bg-secondary p-1 col-12 m-30 h-10" ></p>
        </div>
    </div>

    <div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 10vh; font-size:22px">
        <div class="row w-100 justify-content-end" >
            <p class="text-success m-0 px-5"> Editar Usuario</p>
            <p class="text-bg-success p-1 col-12 m-30 h-10" ></p>
        </div>
    </div>


    <div .container>
        <form method="POST" action="/users/editUser/<%= usuario.id %>" enctype="multipart/form-data"> 
        <div class="d-flex align-items-center justify-content-center" style="min-height: 25vh;">
            <div class="row"></div>
                
                <article class="text-center col-12 " style="font-size: 18px;">
                    <div class="form-floating mb-2 col-4 text-center d-inline-block">
                        <input type="text" name="name" id="name" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>" placeholder="Nombre" value="<%= usuarioEditar.nombre %>" >
                        <label for="name">Nombre y apellido</label>
                        <% if (locals.errors && errors.name) { %>
                        <div class="text-danger">
                            <%= errors.name.msg %>
                        </div>
                        <% } %>
                    </div>

                    <div class="form-floating mb-2 col-4 text-center d-inline-block">
                        <input type="text" name="rol" id="rol" class="form-control <%= locals.errors && errors.rol ? 'is-invalid' : null %>" placeholder="Rol" value="<%= usuarioEditar.rol %>" >
                        <label for="rol">Rol</label>
                        <% if (locals.errors && errors.rol) { %>
                        <div class="text-danger">
                            <%= errors.rol.msg %>
                        </div>
                        <% } %>
                    </div>

                    

                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <input type="text" name="local_id" id="local_id" class="form-control <%= locals.errors && errors.local_id ? 'is-invalid' : null %>" placeholder="Local" value="<%= usuarioEditar.local_id %>" >
                        <label for="local_id">Local ID</label>
                        <% if (locals.errors && errors.local_id) { %>
                        <div class="text-danger">
                            <%= errors.local_id.msg %>
                        </div>
                        <% } %>
                    </div>
                    <div class="form-floating mb-2 col-4 mx-auto text-center d-inline-block">
                        <input type="text" name="email" id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" placeholder="name@example.com" value="<%= usuarioEditar.email %>">
                        <label for="email">Email</label>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                            <% } %>
                    </div>
                    <div class="form-floating mb-2 col-4 mx-auto text-center d-inline-block">
                        <input type="password" class="form-control" id="password" name ="password" placeholder="Password" value="<%= locals.oldData ? oldData.password : null%>">
                        <label for="password">Contrase√±a</label>
                            <% if (locals.errors && errors.password) { %>
                                <div class="text-danger">
                                    <%= errors.password.msg %>
                                </div>
                            <% } %>
                    </div>

                    
                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <div class="form-group">
                        <label class="custom-file-label" for="avatar" >Selecciona una imagen de perfil</label>
                        <input type="file" class="custom-file-input" id="avatar" name="avatar" value="<%= usuarioEditar.avatar %>">  
                            <% if (locals.errors && errors.avatar) { %>
                                <div class="text-danger">
                                    <%= errors.avatar.msg %>
                                </div>
                            <% } %>  
                        </div>
                    </div>   

                    <div class="d-grid mb-5 gap-2 col-3 d-inline-block btn btn-success">
                        <button id="guardarUsuario"class="btn btn-success" type="submit">GUARDAR USUARIO</button>
                    </div>

                    
                    
                </article>
        </div>
    </form>
    </div>

    <%- include ('./listado.ejs') %>
</body>
</html>


