<!DOCTYPE html>
<html lang="en">
    
<%- include ('./../partials/head.ejs') %>
<body>
    <%- include ('./../partials/headerLog.ejs') %>  


    <div class="container-fluid m-0 d-flex pr-0 align-items-end" style="min-height: 10vh; font-size:22px">
        <div class="row w-100 justify-content-end" >
            <!-- COMENTO POR VIEJO  <a class="text-body-tertiary col-6 m-0 row justify-content-end px-5" href="/users/login" style="text-decoration:none;">Iniciar Sesión</a>  -->
            <p class="text-success m-0 px-5"> Registro de Usuarios</p>
            <!-- COMENTO POR VIEJO <p class="bg-secondary-subtle p-1 col-6 m-30 h-10"></p> -->
            <p class="text-bg-success p-1 col-12 m-30 h-10" ></p>
        </div>
    </div>


    <div .container>
        <form method="POST" action="/users/register" enctype="multipart/form-data"> 
        <div class="d-flex align-items-center justify-content-center" style="min-height: 25vh;">
            <div class="row"></div>
                
                <article class="text-center col-12 " style="font-size: 18px;">
                    <div class="form-floating mb-2 col-4 text-center d-inline-block">
                        <input type="text" name="name" id="name" class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>" placeholder="Nombre" value="<%= locals.oldData ? oldData.name : null%>" >
                        <label for="name">Nombre y apellido</label>
                        <% if (locals.errors && errors.name) { %>
                        <div class="text-danger">
                            <%= errors.name.msg %>
                        </div>
                        <% } %>
                    </div>

                    <div class="form-floating mb-2 col-4 text-center d-inline-block">
                        <label for="rol"></label>
                        <select id="rol" name="rol" class="form-select <%= locals.errors && errors.rol ? 'is-invalid' : null %>">
                            <option value="" selected disabled>Selecciona un rol</option>
                            <option value="Administrador" >Administrador</option>
                            <option value="Empleado" >Empleado</option>
                        </select>
                        <% if (locals.errors && errors.rol) { %>
                            <div class="text-danger">
                                <%= errors.rol.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <label for="local_id"></label>
                        <select id="local_id" name="local_id" class="form-select <%= locals.errors && errors.local_id ? 'is-invalid' : null %>">
                            <option value="" selected disabled>Selecciona un Local ID</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                        <% if (locals.errors && errors.local_id) { %>
                            <div class="text-danger">
                                <%= errors.local_id.msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="form-floating mb-2 col-4 mx-auto text-center d-inline-block">
                        <input type="text" name="email" id="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" placeholder="name@example.com" value="<%= locals.oldData ? oldData.email : null%>">
                        <label for="email">Email</label>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                            <% } %>
                    </div>

                    <div class="form-floating mb-2 col-4 mx-auto text-center d-inline-block">
                        <input type="password" class="form-control" id="password" name ="password" placeholder="Password" value="<%= locals.oldData ? oldData.password : null%>">
                        <label for="password">Contraseña</label>
                            <% if (locals.errors && errors.password) { %>
                                <div class="text-danger">
                                    <%= errors.password.msg %>
                                </div>
                            <% } %>
                    </div>

                    <div class="form-floating mb-2 col-3 mx-auto text-center d-inline-block">
                        <div class="form-group">
                            <label class="custom-file-label" for="avatar">Imagen de perfil</label>
                            <div class="input-group">
                                <input type="file" class="custom-file-input" id="avatar" name="avatar" onchange="displayFileName(this)">
                                <label class="custom-file-label" id="avatar-label" for="avatar"></label>
                            </div>
                            <% if (locals.errors && errors.avatar) { %>
                                <div class="text-danger">
                                    <%= errors.avatar.msg %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!--Que muestre el archivo seleccionado -->
                    <script>
                        function displayFileName(input) {
                            const fileName = input.files[0] ? input.files[0].name : 'Ningún archivo seleccionado';
                            const fileNameDisplay = document.getElementById('avatar-label');
                            fileNameDisplay.innerText = fileName;
                        }
                    </script>  


                    <div class="d-grid mb-5 gap-2 col-3 mx-auto btn btn-success">
                        <button id="iniciarsesion"class="btn btn-success" type="submit">CREAR USUARIO</button>
                    </div>
                    
                    
                </article>
        </div>
    </form>
    </div>
    <a class="nav-link text-dark" href="/products/create">Crear producto</a>

    <%- include ('./listado.ejs') %>
</body>
</html>

